{
  "name": "frontend",
  "version": "1.11.1",
  "private": true,
  "packageManager": "pnpm@9.14.4",
  "scripts": {
    "dev": "next dev",
    "dev:https": "node scripts/dev-https.js",
    "dev:https:simple": "node scripts/dev-https-simple.js",
    "dev:pwa": "pnpm run dev:https",
    "dev:mobile": "pnpm run dev:https",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "type-check": "tsc --noEmit",
    "start": "next start",
    "start:https": "HTTPS=true next start -p 3000",
    "lint": "next lint",
    "test": "vitest",
    "test:unit": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test --config ../tests/frontend/e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config ../tests/frontend/e2e/playwright.config.ts --ui",
    "test:e2e:debug": "playwright test --config ../tests/frontend/e2e/playwright.config.ts --debug",
    "test:performance": "lighthouse http://localhost:3000 --output=json --output-path=./reports/lighthouse-report.json",
    "test:security": "pnpm audit && pnpm run test:e2e:security",
    "test:e2e:security": "playwright test --config ../tests/frontend/e2e/playwright.config.ts --grep='@security'",
    "test:all": "pnpm run test && pnpm run test:e2e && pnpm run test:performance",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "clean:all": "pnpm run clean && rm -rf node_modules && pnpm install",
    "pwa:audit": "npx lighthouse https://localhost:3000 --only-categories=pwa --chrome-flags='--ignore-certificate-errors'",
    "pwa:test": "echo 'Open https://localhost:3000 in Chrome > DevTools > Application > Service Workers'",
    "pwa:clear": "echo 'Clear PWA cache: DevTools > Application > Storage > Clear storage'",
    "pwa:setup": "echo 'Run: mkcert -install && mkdir -p .certificates && cd .certificates && mkcert localhost 127.0.0.1 ::1 $(ipconfig getifaddr en0)'"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.3.3",
    "@radix-ui/react-slot": "^1.2.0",
    "@tanstack/react-query": "^5.80.2",
    "@types/decimal.js": "^0.0.32",
    "@types/jsonwebtoken": "^9.0.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "decimal.js": "^10.5.0",
    "dompurify": "^3.2.6",
    "file-saver": "^2.0.5",
    "firebase": "^11.8.1",
    "framer-motion": "^12.9.7",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.507.0",
    "next": "^15.2.4",
    "next-auth": "^4.24.11",
    "pdfjs-dist": "^5.2.133",
    "react": "^18.3.1",
    "react-confetti": "^6.4.0",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "recharts": "^2.15.3",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.47.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^2.0.0",
    "beasties": "^0.3.4",
    "critters": "^0.0.25",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "http-proxy": "^1.18.1",
    "jsdom": "^25.0.0",
    "lighthouse": "^12.0.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.2.9",
    "typescript": "^5",
    "vite": "^5.3.1",
    "vitest": "^2.0.0"
  }
}
