{
  "name": "profolio",
  "version": "1.14.8",
  "description": "Professional Self-Hosted Portfolio Management System - Complete data control and privacy for your financial portfolio tracking",
  "main": "install.sh",
  "scripts": {
    "start": "concurrently \"pnpm start:backend\" \"pnpm start:frontend\"",
    "start:dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "start:backend": "cd backend && pnpm start",
    "start:frontend": "cd frontend && pnpm start",
    "dev": "pnpm start:dev",
    "dev:clean": "./scripts/dev-with-cleanup.sh",
    "cleanup": "./scripts/cleanup-ports.sh",
    "dev:backend": "cd backend && pnpm run start:dev",
    "dev:frontend": "cd frontend && pnpm run dev",
    "build": "pnpm build:backend && pnpm build:frontend",
    "build:backend": "cd backend && pnpm run build",
    "build:frontend": "cd frontend && pnpm run build",
    "test": "pnpm test:backend && pnpm test:frontend",
    "test:backend": "cd backend && pnpm test",
    "test:frontend": "cd frontend && pnpm test",
    "update": "./install.sh",
    "deploy": "./deploy.sh",
    "setup": "./setup.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Obednal97/profolio.git"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "portfolio",
    "finance",
    "self-hosted",
    "investment-tracking",
    "proxmox",
    "homelab",
    "privacy",
    "typescript",
    "nextjs",
    "nestjs"
  ],
  "author": "Ollie Bednal <contact@profolio.app>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Obednal97/profolio/issues"
  },
  "homepage": "https://github.com/Obednal97/profolio#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.14.4",
  "files": [
    "install.sh",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "policies/"
  ],
  "dependencies": {
    "next": "^15.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "http-proxy": "^1.18.1"
  }
}
